RewriteEngine On
RewriteBase /

# Priority: Handle admin dashboard
RewriteRule ^admin/dashboard/?$ admin/dashboard.php [L,NC]

# Priority: Handle other admin files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/admin/$1.php -f
RewriteRule ^admin/(.+)/?$ admin/$1.php [L,NC]

# General extensionless PHP
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Redirect .php to extensionless
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L]