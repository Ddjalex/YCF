RewriteEngine On
RewriteBase /

# 1. Handle /admin explicitly and first to avoid it being caught by other rules
RewriteRule ^admin/?$ admin.php [L,NC,QSA]

# 2. Redirect /index.php to /
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.php\ HTTP/
RewriteRule ^index\.php$ / [R=301,L]

# 3. Redirect /admin.php to /admin
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /admin\.php\ HTTP/
RewriteRule ^admin\.php$ /admin [R=301,L]

# 4. Hide .php extension for existing files (excluding directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]